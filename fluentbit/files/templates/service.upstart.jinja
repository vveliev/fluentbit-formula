description "{{ fluentbit.package }} log collection service"

start on started network-services
stop on runlevel [!2345]
setgid nogroup

# Set reasonable file limits
limit nofile 65536 65536

# Restart automatically on crash
respawn

console log

exec /usr/local/bin/{{ fluentbit.package }} -c /etc/{{ fluentbit.package }}/{{ fluentbit.package }}.conf -R /etc/{{ fluentbit.package }}/parsers.conf
